<% content_for :page_title do %>
    <%= link_to Spree.t(:service_fee), admin_service_fees_url %> /
    <%= @service_fee.name %>
<% end %>

<%= form_for @service_fee, :url => object_url, :method => :put do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render :partial => 'form', :locals => { :f => f } %>
        <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
      </div>
    </div>
<% end %>

<div id="service-fee-filters" class="row">
  <div id="rules_container" class="col-md-6">
    <div class="panel panel-default">
      <%= render :partial => 'rules' %>
    </div>
  </div>
  <div id="adjustments_container" class="col-md-6">
    <div class="panel panel-default">
      <%= render :partial => 'adjustments' %>
    </div>
  </div>
</div>